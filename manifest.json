{
  "manifest_version": 2,
  "name": "De:dobe",
  "version": "1.0.0",
  "description": "Export your Grok conversations - your data belongs to you. No paywalls, no limits.",
  "author": "Black Orchard Labs",
  "homepage_url": "https://github.com/BlackOrchardLabs/de-dobe",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Export Grok Conversation",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://grok.com/*", "https://x.com/i/grok*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
